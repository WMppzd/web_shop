<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.shop.web.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>active</servlet-name>
        <servlet-class>com.shop.web.servlet.ActiveUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>active</servlet-name>
        <url-pattern>/active</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>checkUsername</servlet-name>
        <servlet-class>com.shop.web.servlet.IsHaveNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkUsername</servlet-name>
        <url-pattern>/checkUsername</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.shop.web.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>category</servlet-name>
        <servlet-class>com.shop.web.servlet.HeaderCategryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>category</servlet-name>
        <url-pattern>/getCategory</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetProByCidServlet</servlet-name>
        <servlet-class>com.shop.web.servlet.GetProByCidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProByCidServlet</servlet-name>
        <url-pattern>/getProByCid</url-pattern>
    </servlet-mapping>
</web-app>